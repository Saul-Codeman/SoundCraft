{
  "family": "soundcraft-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "soundcraft-container",
      "image": "073230453739.dkr.ecr.us-east-1.amazonaws.com/soundcraft-repo",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "VITE_FIREBASE_API_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:073230453739:parameter/soundcraft/frontend/VITE_FIREBASE_API_KEY"
        },
        {
          "name": "VITE_FIREBASE_AUTH_DOMAIN",
          "valueFrom": "arn:aws:ssm:us-east-1:073230453739:parameter/soundcraft/frontend/VITE_FIREBASE_AUTH_DOMAIN"
        },
        {
          "name": "VITE_FIREBASE_PROJECT_ID",
          "valueFrom": "parameter-store:/soundcraft/frontend/VITE_FIREBASE_PROJECT_ID"
        },
        {
          "name": "VITE_FIREBASE_APP_ID",
          "valueFrom": "parameter-store:/soundcraft/frontend/VITE_FIREBASE_APP_ID"
        },
        {
          "name": "MONGODB_URI",
          "valueFrom": "parameter-store:/soundcraft/backend/MONGODB_URI"
        },
        {
          "name": "MONGODB_MUSIC_URI",
          "valueFrom": "parameter-store:/soundcraft/backend/MONGODB_MUSIC_URI"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "parameter-store:/soundcraft/backend/DB_NAME"
        },
        {
          "name": "COLLECTION_NAME",
          "valueFrom": "parameter-store:/soundcraft/backend/COLLECTION_NAME"
        },
        {
          "name": "JAMENDO_CLIENT_ID",
          "valueFrom": "parameter-store:/soundcraft/backend/JAMENDO_CLIENT_ID"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "parameter-store:/soundcraft/backend/AWS_ACCESS_KEY_ID"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "parameter-store:/soundcraft/backend/AWS_SECRET_ACCESS_KEY"
        },
        {
          "name": "AWS_BUCKET_NAME",
          "valueFrom": "parameter-store:/soundcraft/backend/AWS_BUCKET_NAME"
        },
        {
          "name": "AWS_REGION",
          "valueFrom": "parameter-store:/soundcraft/backend/AWS_REGION"
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::073230453739:role/ecsTaskExecutionRole"
}
